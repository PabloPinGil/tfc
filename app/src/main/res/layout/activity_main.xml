<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/btnSmoke"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_cigarette"
            android:contentDescription="@string/cigarette_button_desc"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvSmokeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:text="Llevas 0 días sin fumar"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mis Estadísticas"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnCompare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comparar"/>
    </LinearLayout>
</LinearLayout>